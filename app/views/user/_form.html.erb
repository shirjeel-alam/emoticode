<div id="register" class="headblock">
  <h1>Sign Up</h1>

  <%= render :partial => 'sessions/connect' %>

  <% @user ||= User.new %>
  <%= form_for @user, :url => sign_up_path, :html => { :class => 'pure-form pure-form-aligned' } do |f| %>
    <% @user.errors.full_messages.each do |msg| %>
      <p class="error"><%= msg %></p>
    <% end %>
    <fieldset class="pure-group">
      <%= f.text_field :username, :placeholder => 'Username' %>
      <%= f.text_field :email, :placeholder => 'Email' %>
      <%= f.password_field :password, :placeholder => 'Password' %>
      <%= f.password_field :password_confirmation, :placeholder => 'Confirmation' %>
      <input type="text" name="antibot" value="" style="display:none;"/>
    </fieldset>

    <center>
      <%= recaptcha_tags %>
    </center>
    <br/>

    <%= f.submit "Sign Up", :class => 'pure-button pure-button-primary' %>
  <% end %>
</div>